{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Read",
      "Glob",
      "Grep",
      "Bash(bun *)",
      "Bash(bunx *)",
      "Bash(ls *)",
      "Bash(git *)"
    ]
  },
  "rules": {
    "auto-load": {
      "*.astro": ["rules/astro.md"],
      "*.tsx": ["rules/react.md"],
      "src/engine/**/*.ts": ["rules/engine.md"]
    }
  }
}
