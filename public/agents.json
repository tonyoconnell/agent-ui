{
  "agents": [
    {
      "id": "scout",
      "name": "Scout",
      "status": "ready",
      "actions": {
        "observe": { "processed": true, "data": "market-tick" }
      },
      "envelopes": []
    },
    {
      "id": "analyst",
      "name": "Analyst",
      "status": "ready",
      "actions": {
        "evaluate": { "signal": "strong", "confidence": 0.85 }
      },
      "envelopes": []
    },
    {
      "id": "trader",
      "name": "Trader",
      "status": "ready",
      "actions": {
        "execute": { "executed": true, "orderId": "123" }
      },
      "envelopes": []
    }
  ],
  "envelopes": [
    {
      "receiver": "scout",
      "receive": "observe",
      "payload": { "source": "api/feed" },
      "callback": {
        "receiver": "analyst",
        "receive": "evaluate",
        "payload": { "data": "{{result}}" },
        "callback": {
          "receiver": "trader",
          "receive": "execute",
          "payload": { "signal": "{{result}}" }
        }
      }
    }
  ]
}
