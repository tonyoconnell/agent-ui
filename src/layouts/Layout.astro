---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="min-h-screen bg-[#0f0f17] text-white antialiased">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";

  html, body {
    background-color: #0f0f17 !important;
    min-height: 100vh;
    min-height: 100dvh;
  }
</style>
