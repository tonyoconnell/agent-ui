---
import Layout from "../layouts/Layout.astro";
import EnvelopeFlowCanvas from "../components/flow/EnvelopeFlowCanvas";
---
<Layout title="Envelope Flow">
  <!-- Navigation -->
  <div class="fixed top-4 right-4 z-50 flex items-center gap-2">
    <a
      href="/"
      class="flex items-center gap-2 px-4 py-2 bg-slate-500/20 border border-slate-500/30 rounded-lg text-slate-300 hover:bg-slate-500/30 transition-colors"
    >
      <span class="text-sm font-medium">‚Üê Main</span>
    </a>
    <a
      href="/envelopes"
      class="flex items-center gap-2 px-4 py-2 bg-blue-500/20 border border-blue-500/30 rounded-lg text-blue-300 hover:bg-blue-500/30 transition-colors"
    >
      <span class="text-sm font-medium">Full Workspace</span>
    </a>
  </div>
  <div class="h-screen w-screen">
    <EnvelopeFlowCanvas client:load />
  </div>
</Layout>
